@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var navLink = document.getElementById("nav-profile");
        navLink.classList += " nav-link-active";

        function validateMyForm(inputtxt) {
            var passw = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{7,20}$/;
            if (!inputtxt.value.match(passw)) {
                alert('La password deve contenere almeno 7 caratteri, tra cui una lettera maiuscola, un numero e un carattere speciale.');
                return false;
            }
            else{
                return true;
            }
        }
    </script>
}