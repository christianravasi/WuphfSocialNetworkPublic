<div class="py-5">
    <div class="my-cont">
        <div class="log-in-card py-5">
            <h1 class="titolo">REGISTRATI</h1>
            <form asp-action="ConfirmEmail" class="py-5 px-5" method="post" name="form1" onsubmit="return validateMyForm(document.form1.Password);">
                <div class="row text-center">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="mb-4">
                    <label for="exampleInputEmail1" class="form-label my-text">Email</label>
                    <input asp-for="Email" type="text" class="form-control" id="colFormLabelSm" placeholder="Email..." />
                </div>
                <div class="mb-4">
                    <label for="exampleInputEmail1" class="form-label my-text">Username</label>
                    <input asp-for="UserName" type="text" class="form-control" id="colFormLabelSm" placeholder="Username..." />
                </div>
                <div class="mb-4">
                    <label for="exampleInputEmail1" class="form-label my-text">Nome</label>
                    <input asp-for="Name" type="text" class="form-control" id="colFormLabelSm" placeholder="Nome..." />
                </div>
                <div class="mb-4">
                    <label for="exampleInputPassword1" class="form-label my-text">Password <br /> <small>(deve contenere 7-20 caratteri, tra cui una maiuscola, un numero e un carattere speciale)</small></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password..." name="Password" id="Password">
                </div>
                @if (User.IsInRole("admin"))
                {
                    <div class="mb-4">
                        <label for="exampleInputEmail1" class="form-label my-text">Ruolo</label>
                        <select asp-for="Role" class="form-select">
                            <option disabled selected>- Seleziona Ruolo -</option>
                            <option value="admin">Admin</option>
                            <option value="customer">Customer</option>
                        </select>
                    </div>
                }
                else
                {
                    <input asp-for="Role" value="customer" hidden />
                }                
                <button type="submit" class="btn my-btn my-text" value="Submit">REGISTRATI</button>
            </form>
        </div>
    </div>
</div>





