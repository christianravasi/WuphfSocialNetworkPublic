@model WuphfWeb.Models.DTO.LoginRequestDTO

@{
    ViewData["Title"] = "Login";
}

<style>
    .log-in-card {
        width: 450px !important;
        height: 500px;
        top: 30%;
        background-color: #ffff;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.2);
    }

    .form-label {
        font-size: 18px;
    }

    .my-btn {
        background-color: var(--Primary-Button) !important;
        color: #fff !important;
        width: 100%;
        height: 55px;
        border-radius: 15px !important;
    }

    .form-control {
        height: 55px;
        border-radius: 15px !important;
    }

    .my-cont {
        display: flex;
        margin-left: auto;
        margin-right: auto;
        justify-content: center;
    }

    .my-text {
        font-family: montserrat;
    }

    .my-link {
        color: var(--Primary-Button);
    }
</style>
<div class="py-5">
    <div class="my-cont">
        <div class="log-in-card py-5">
            <h1 class="titolo">LOGIN</h1>
            <form class="py-5 px-5" method="post">
                <div class="mb-4">
                    <label for="exampleInputEmail1" class="form-label my-text">Username</label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Username..." id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-5">
                    <label for="exampleInputPassword1" class="form-label my-text">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password..." id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn my-btn my-text" value="Submit">ACCEDI</button>
                <a href="/Auth/ForgotPassword" class="my-link">Password dimenticata?</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var navLink = document.getElementById("nav-profile");
        navLink.classList += " nav-link-active";
    </script>
}