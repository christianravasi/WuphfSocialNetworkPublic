@model ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
}

<style>
    .log-in-card {
        width: 450px !important;
        height: 550px;
        top: 30%;
        background-color: #ffff;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.2);
    }

    .form-label {
        font-size: 18px;
    }

    .my-btn {
        background-color: var(--Primary-Button) !important;
        color: #fff !important;
        width: 100%;
        height: 55px;
        border-radius: 15px !important;
    }

    .form-control {
        height: 55px;
        border-radius: 15px !important;
    }

    .my-cont {
        display: flex;
        margin-left: auto;
        margin-right: auto;
        justify-content: center;
    }

    .my-text {
        font-family: montserrat;
    }

    .my-link {
        color: var(--Primary-Button);
    }
</style>

<div class="py-5">
      <div class="my-cont">
          <div class="log-in-card py-5">
              <h1 class="titolo">RESET PASSWORD</h1>
              <form class="py-5 px-5" asp-action="ResetPasswordFinal" method="post">
                <input asp-for="Username" value="@Model.Username" class="form-control" hidden >
                <input asp-for="Token" value="@Model.Token" class="form-control" hidden >
                  <div class="mb-5 mt-3">
                    <label asp-for="NewPassword" class="form-label my-text">Nuova password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nuova password...">
                  </div>
                  <div class="mb-5">
                    <label asp-for="ConfirmNewPassword" class="form-label my-text">Conferma password</label>
                    <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Conferma password...">
                  </div>
                  <button type="submit" class="btn my-btn my-text mt-4">CAMBIA</button>
                </form>
          </div>
      </div>
</div>

@section Scripts{
    <script>
        var navLink = document.getElementById("nav-profile");
        navLink.classList += " nav-link-active";
    </script>
}